generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "./dev.db"
}

model User {
  id    String    @id @default(cuid())
  email String    @unique
  name  String?
  password String
  task    Task[] 
}

model Task {
  id    Int   @id   @default(autoincrement())
  task  String
  status Boolean    @default(false)
  user    User    @relation(fields: [userId], references: [id])
  userId  String
}
